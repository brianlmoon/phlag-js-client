{
  "name": "@moonspot/phlag-client",
  "version": "0.1.0",
  "description": "JavaScript/TypeScript client library for the Phlag feature flag management system",
  "keywords": [
    "phlag",
    "feature-flags",
    "feature-toggles",
    "configuration",
    "flags"
  ],
  "author": "Brian Moon <brian@moonspot.net>",
  "license": "BSD-3-Clause",
  "homepage": "https://github.com/moonspot/phlag-js-client#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/moonspot/phlag-js-client.git"
  },
  "bugs": {
    "url": "https://github.com/moonspot/phlag-js-client/issues"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npx -y -p typescript@5.9.3 tsc",
    "test": "npx -y vitest@4.0.13 run",
    "test:watch": "npx -y vitest@4.0.13",
    "test:ui": "npx -y vitest@4.0.13 --ui",
    "test:types": "tsc --project tsconfig.test.json --noEmit",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "npx -y prettier@3.6.2 --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "npx -y prettier@3.6.2 --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepack": "npm run build && npm test",
    "prepublishOnly": "npm run build && npm test",
    "publish:dry-run": "npm pack --dry-run",
    "verify-package": "npm pack && tar -tzf *.tgz && rm *.tgz",
    "analyze-bundle": "node scripts/analyze-bundle.cjs"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitest/ui": "^4.0.13",
    "eslint": "^9.39.1",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.13"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
